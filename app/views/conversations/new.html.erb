<!-- Jumbottron -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Nouvelle conversation 
				<%= link_to conversations_path do %>
					<p><i class="fas fa-arrow-left"></i>&nbsp; Annuler</p>
				<%end%>
  </div>
</div>

<div class="container m-3 d-flex justify-content-center col-sm-12">
	<%= form_tag("/conversations", method: "post", :style => "width:500px") do %>
		
		<div class="form-group">
			 <%= label_tag(:conversation_title, "Nom de la conversation:") %>
			 <%= text_field_tag(:conversation_title, "", :class => 'form-control') %>
		</div>

		<div class="form-group">
			 <%= label_tag(:conversation_friend, "Un ami à ajouter dans la conversation:") %>
			 <%= text_field_tag(:conversation_friend, "", :class => 'form-control') %>
		</div>

		<div class="col-sm-12 d-flex justify-content-center  m-3">
			<%= submit_tag("Créer la conversation", :class => "btn btn-success") %>
		</div>

	<% end %>
</div>

