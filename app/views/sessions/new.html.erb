<!-- Jumbottron -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><i class="fas fa-sign-in-alt"></i> Connecte toi </strong>
</h1>
    <p class="lead">Tu décrouvriras les tout derniers potins croustillants sur tous les mousaillons de la session 7 de THP</p>
  </div>
</div>

<div class="container m-3 d-flex justify-content-center col-sm-12">
	<%= form_tag("/sessions", method: "post", :style => "width:500px") do %>
		
		<div class="form-group">
			 <%= label_tag(:email, "Ton email :") %>
			 <%= email_field_tag(:email, "", :class => 'form-control') %>
		</div>
		<div class="form-group">
			<%= label_tag(:password, "Ton mot de passe :") %>
			<%= password_field_tag(:password, "", :class => 'form-control') %>
		</div>

		<div class="col-sm-12 d-flex justify-content-center  m-3">
			<%= submit_tag("Se connecter", :class => "btn btn-outline-primary") %>
		</div>

	<% end %>
</div>

<div class="container m-3 d-flex justify-content-center col-sm-12">
	<div>
	<%= link_to "Vous n'avez pas de compte ? Créez en un pour accéder à tout THPotins", new_user_path %>
	</div>
</div>