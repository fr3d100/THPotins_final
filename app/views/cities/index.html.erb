	<!-- CONTENT -->
<!-- Jumbottron -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><i class="fas fa-city"></i> Les villes</h1>
    <p class="lead">Voici toutes les villes où les ragots courent</p>
  </div>
</div>

<!-- TOP city -->
<div class="container d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h1><i class="fas fa-medal"></i> Ville la plus représentée</h1>
		</div>
		<div class="col-sm-12 d-flex justify-content-center">
			<div class="list-group" style="width:50rem">
				<%= link_to city_path(@top_city.id), class: "list-group-item list-group-item-action" do %>
			    <div class="d-flex w-100 justify-content-between" >
			      <h5 class="mb-1"><i class="fas fa-city"></i> <%=@top_city.name%></h5>
			      <button type="button" class="btn btn-outline-primary btn-sm">
						  <span class="badge badge-light"><%=@top_city.users.size%> gossipeurs</span>
						</button>
			    </div>
			  <% end %>
		</div>
	</div>
</div>
</div>
<hr>

<!-- All cities -->
<div class="container d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h1>Annuaire des ville </h1>
		</div>

		<div class="col-sm-12 d-flex justify-content-center">
			<div class="list-group" style="width:50rem">
				<% @cities.all.each do |city|  %>
					<%= link_to city_path(city.id), class: "list-group-item list-group-item-action" do %>
				    <div class="d-flex w-100 justify-content-between" >
				      <h5 class="mb-1"><i class="fas fa-city"></i> <%=city.name%></h5>
				      <button type="button" class="btn btn-outline-primary btn-sm">
							  <span class="badge badge-light"><%=city.users.size%> gossipeurs</span>
							</button>
				    </div>
				  <% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>